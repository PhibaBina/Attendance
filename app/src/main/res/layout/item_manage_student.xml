<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Student Information -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/student_roll_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll No: 12345"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/student_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department: CS"
                android:textSize="12sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/student_semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester: 2"
                android:textSize="12sp"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject: CS,Evs,bh,ij"
                android:textSize="12sp"
                android:textColor="@android:color/black" />
        </LinearLayout>
        <!-- Three-Dot Menu -->
        <ImageView
            android:id="@+id/three_dot_menu"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/threedot"
            android:contentDescription="More options"
            android:layout_gravity="end"
            android:layout_marginTop="-20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="-15dp"
            android:padding="8dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
