<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="GridItem">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:orientation">vertical</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">16dp</item>
</style>

<style name="GridIcon">
    <item name="android:layout_width">64dp</item>
    <item name="android:layout_height">64dp</item>
    <item name="android:src">@drawable/grid</item>
</style>

<style name="GridText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:layout_marginTop">8dp</item>
</style>

<style name="NavItem">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:orientation">vertical</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">8dp</item>
</style>

<style name="NavIcon">
    <item name="android:layout_width">24dp</item>
    <item name="android:layout_height">24dp</item>
</style>

<style name="NavText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/white</item>
</style>

    <style name="FieldTitle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FieldInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/field_background</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="RoutineHeaderCell">
        <item name="android:background">#CCCCCC</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RoutineDayCell">
        <item name="android:background">#EEEEEE</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RoutineCell">
        <item name="android:padding">6dp</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="ProfileItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/border_bottom_gray</item>
    </style>


</resources>
